{
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"types": ["express", "cors", "express-ws"],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true,

		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
